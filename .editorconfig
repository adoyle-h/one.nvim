root = true

[*]
indent_style = space
indent_size = 2
charset = utf-8
end_of_line = lf
trim_trailing_whitespace = true
insert_final_newline = true

[Dockerfile]
indent_size = 4

[.gitmodules]
indent_style = tab

[*.lua]
indent_style = tab

[*.{js,jsx,ts}]
indent_size = 4
indent_style = tab

[*.{diff,md}]
trim_trailing_whitespace = false

[Makefile]
indent_style = tab
